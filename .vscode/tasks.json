{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": ["$tsc-watch"],
            "label": "npm: watch",
            "detail": "tsc --build --watch --verbose"
        },
        {
            "type": "npm",
            "script": "doc",
            "isBackground": true,
            "label": "npm: doc",
            "detail": "pnpm run start --filter @sosuisen/gh-pages",
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "source": "vite",
                    "severity": "error",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(\\d|:)+\\s+(PM|AM)\\s+\\[vite\\]\\sInternal\\sserver\\serror\\:\\s[^\\s].([^:]+):\\s+([^\\(]+)\\((\\d+):(\\d+)\\)\\s*$",
                        "file": 3,
                        "message": 4,
                        "line": 5,
                        "column": 6
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "dev server running"
                        },
                        "endsPattern": {
                            "regexp": "ready"
                        }
                    }
                }
            ]
        }
    ]
}
